        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="220" VerticalAlignment="Top">
    <Grid Margin="0,0,2,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button1" Content="Login" HorizontalAlignment="Left" Margin="50,125,0,0" VerticalAlignment="Top" Width="105" Click="Button1_Click" RenderTransformOrigin="0.067,0.5"/>
        <TextBox x:Name="TextBoxPassword" Height="27" Margin="0,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Password" VerticalAlignment="Top" Height="73" FontSize="48"/>
    </Grid>
</Window>
